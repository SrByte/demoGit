@model IEnumerable<MasterChef.Web.Models.CategoryModel>
<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Categoria</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CategoryCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>  Criar Nova Categoria
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Categoria
                </th>                           
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>                                     
                    <td>
                        <a asp-action="CategoryUpdate" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="CategoryDelete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>