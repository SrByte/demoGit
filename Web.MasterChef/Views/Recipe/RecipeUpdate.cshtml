@model MasterChef.Web.Models.RecipeModel

<form asp-action="RecipeUpdate" asp-antiforgery="true">
	@Html.AntiForgeryToken()
	<input asp-for="Id" hidden>
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Atualizar</h1>

		<hr />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="col-2">
				<label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Receita</label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger" />
			</div>
			<div class="col-2">
				<label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Categoria</label>
			</div>
			<div class="col-10 pb-3">
				@Html.DropDownList("ddlCategories",(List<SelectListItem>)ViewBag.CategoryId)
			</div>
			<div class="col-2">
				<label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Ingredientes</label>
			</div>
			<div class="col-10 pb-3">
				@Html.ListBoxFor(x=>x.IngredientIds, new MultiSelectList(ViewBag.Ingredients, "Id", "Name"),new { @class = "control-label col-md-2" })
			</div>
			<div class="col-2">
				<label asp-for="URL" class="control-label pt-2" style="font-size:20px;">URL da Foto</label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="URL" class="form-control" />
				<span asp-validation-for="URL" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Tags" class="control-label pt-2" style="font-size:20px;">TAGs</label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Tags" class="form-control" />
				<span asp-validation-for="Tags" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Descrição</label>
			</div>
			<div class="col-10 pb-3">
				<textarea asp-for="Description" class="form-control" rows="5"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="col-5 offset-2">
				<a asp-action="RecipeIndex" class="btn-primary btn form-control ">Voltar</a>
			</div>

			<div class="col-5">
				<input type="submit" value="Atualizar" class="btn btn-success form-control" />
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial">
	}
