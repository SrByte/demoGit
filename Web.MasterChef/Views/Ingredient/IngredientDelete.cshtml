@model MasterChef.Web.Models.IngredientModel

<form asp-action="IngredientDelete" asp-antiforgery="true">
    @Html.AntiForgeryToken()
    <input asp-for="Id" hidden>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Excluir</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;">Ingrediente</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>                          
            <div class="col-5 offset-2">
                <a asp-action="IngredientIndex" class="btn-primary btn form-control ">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Excluir" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
    }
